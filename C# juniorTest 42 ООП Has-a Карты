using System;
using System.Collections.Generic;

namespace TestOOP
{
    class Program
    {
        static void Main(string[] args)
        {
            int positionListsCardDeckX = 60;
            int positionListsCardDeckY = 2;
            int positionListsCardPlayerX = 80;
            int positionListsCardPlayerY = 2;
            bool isPlay = true;
            CardDeck cardDeck = new CardDeck();
            Player player = new Player(null);

            Console.CursorVisible = false;
            cardDeck.CreateCards();

            while (isPlay)
            {
                Console.Clear();

                cardDeck.ShowCards(positionListsCardDeckX, positionListsCardDeckY);
                player.ShowCard(positionListsCardPlayerX, positionListsCardPlayerY);

                Console.SetCursorPosition(0, 0);
                Console.Write("  Набираем карты на обои.\n\n Надоест набери exit, выбери карту: ");
                string selectPlayer = Console.ReadLine();

                switch (selectPlayer)
                {
                    case "exit":
                        isPlay = false;
                        break;

                    default:
                        TakeCard(selectPlayer, ref isPlay,cardDeck, player);
                        break;
                }

                if (cardDeck.IsEmpty())
                    isPlay = false;
            }
        }

        static void TakeCard(string text, ref bool isPlay, CardDeck cardDeck, Player player)
        {
            int selectCard;
            int.TryParse(text, out selectCard);

            if (selectCard > 0 && selectCard <= cardDeck.GetNumberCards())
            {
                player.AddCard(cardDeck.GetCard(selectCard));
                cardDeck.RemoveCard(selectCard);
            }
        }
    }

    class Player
    {
        private readonly List<Card> _cards = new List<Card>();

        public string Name { get; private set; }

        public Player(string name)
        {
            Name = name;
        }

        public void AddCard(Card card)
        {
            _cards.Add(card);
        }

        public void ShowCard(int positionX, int positionY)
        {
            for (int i = 0; i < _cards.Count; i++)
            {
                Console.SetCursorPosition(positionX, positionY + i);
                Console.WriteLine(_cards[i].Name + " " + _cards[i].Suit);
            }
        }
    }

    class CardDeck
    {
        private static readonly string[] _namesCard = { "туз", "король", "дама", "валет", "10", "9", "8", "7", "6" };
        private static readonly string[] _suitCard = { "черв", "буб", "крест", "пик" };

        private readonly List<Card> _cards = new List<Card>();

        public void CreateCards()
        {
            for (int i = 0; i < _namesCard.Length; i++)
            {
                for (int j = 0; j < _suitCard.Length; j++)
                {
                    _cards.Add(new Card(_namesCard[i], _suitCard[j]));
                }
            }
        }

        public void ShowCards(int positionX, int positionY)
        {

            for (int i = 0; i < _cards.Count; i++)
            {
                Console.SetCursorPosition(positionX, positionY + i);
                Console.WriteLine((i + 1) + " - " + _cards[i].Name + " " + _cards[i].Suit);
            }
        }

        public Card GetCard(int number)
        {
            return _cards[number - 1];
        }

        public void RemoveCard(int number)
        {
            _cards.RemoveAt(number - 1);
        }

        public bool IsEmpty()
        {
            return _cards.Count == 0;
        }

        public int GetNumberCards()
        {
            return _cards.Count;
        }
    }

    class Card
    {
        public string Name { get; private set; }
        public string Suit { get; private set; }

        public Card(string name, string suit)
        {
            Name = name;
            Suit = suit;
        }
    }
}
