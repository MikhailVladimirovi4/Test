using System;
using System.Collections.Generic;
using System.Linq;

namespace LinQ
{
    class Program
    {
        static void Main(string[] args)
        {
            HeadquartersCenter center = new HeadquartersCenter();
            List<Soldier> combatUnit1 = new List<Soldier>();
            List<Soldier> combatUnit2 = new List<Soldier>();

            center.CreateCombatUnits(combatUnit1, combatUnit2);
            center.ReorganizeUnit(combatUnit1, combatUnit2);
        }
    }

    class HeadquartersCenter
    {
        public void ReorganizeUnit(List<Soldier> combatUnit1, List<Soldier> combatUnit2)
        {
            List<Soldier> temporaryUnit = combatUnit1.Where(persoon => persoon.Name.ToLower().StartsWith("б")).ToList();
            List<Soldier> resultCombatUnit1 = combatUnit1.Except(temporaryUnit).ToList();
            List<Soldier> resultCombatUnit2 = combatUnit2.Union(temporaryUnit).ToList();
            Console.WriteLine("\n\nРезультат переформирования: ");
            DrawCombatUnits(resultCombatUnit1, resultCombatUnit2);
        }

        public void CreateCombatUnits(List<Soldier> combatUnit1, List<Soldier> combatUnit2)
        {
            CreateCombatUnit(combatUnit1, "Первый отряд");
            CreateCombatUnit(combatUnit2, "Второй отряд");
        }

        private void DrawCombatUnits(List<Soldier> combatUnit1, List<Soldier> combatUnit2)
        {
            DrawCombatUnit(combatUnit1, "Первый отряд");
            DrawCombatUnit(combatUnit2, "Второй отряд");
        }

        private void DrawCombatUnit(List<Soldier> combatUnit, string text)
        {
            Console.WriteLine("\n\n" + text);

            for (int i = 0; i < combatUnit.Count; i++)
                combatUnit[i].Draw();
        }

        private void CreateCombatUnit(List<Soldier> lists, string text)
        {
            int numberUnits = 5;

            Console.WriteLine("\n\n" + text);

            for (int i = 0; i < numberUnits; i++)
            {
                lists.Add(new Soldier());
                lists[i].Draw();
            }
        }
    }

    class Soldier
    {
        private readonly static Random _random = new Random();
        private readonly WordStorage _wordStorage = new WordStorage();
        public string Name { get; private set; }
        public string Rank { get; private set; }

        public Soldier()
        {
            Name = _wordStorage.Names[_random.Next(0, _wordStorage.Names.Length)];
            Rank = _wordStorage.Ranks[_random.Next(0, _wordStorage.Ranks.Length)];
        }

        public void Draw() => Console.WriteLine($"Боец: {Name}, звание: {Rank}.");
    }

    class WordStorage
    {
        public readonly string[] Names = { "Бакланов", "Арбузов", "Баклажанов", " Суханов", "Бобов" };
        public readonly string[] Ranks = { "Рядовой", "Сержант", "Прапорщик", " Лейтенант", "Капитан", "Майор", "Полковник", "Генерал", "Маршал" };
    }
}
