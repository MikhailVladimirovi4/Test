using System;

internal class Program
{
    static void Main(string[] args)
    {
        string spam;
        int  numberSpam;

        Console.Write("Введите текст сообщения: ");
        spam = Console.ReadLine();
        Console.Write("Введите желаемое количество повторений сообщений: ");
        numberSpam = Convert.ToInt32(Console.ReadLine());

        while (0 < numberSpam--)
        {
            Console.Write(spam);
        }
    }
}
