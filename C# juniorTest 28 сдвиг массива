using System;

internal class Program
{
    static void Main(string[] args)
    {
        Random random = new Random();
        int maxValueArray = 9;
        int minValueArray = 0;
        int outputPositionY = 5;
        int outputPositionX = 0;
        int[] array = new int[10];
        int tempNumber;

        for (int i = 0; i < array.Length; i++)
        {
            array[i] = random.Next(minValueArray, maxValueArray);
            Console.Write(array[i] + " ");
        }

        Console.Write("\n\n Введите значение сдвига: ");
        int shiftValue = Convert.ToInt32(Console.ReadLine());

        Console.SetCursorPosition(outputPositionX, outputPositionY);

        for (int i = 0; i < shiftValue; i++)
        {
            tempNumber = array[0];

            for (int j = 0; j < (array.Length - 1); j++)
            {
                array[j] = array[j + 1];
            }
            array[array.Length - 1] = tempNumber;

            for (int j = 0; j < array.Length; j++)
            {
                Console.Write(array[j] + " ");
            }

            Console.WriteLine();
            outputPositionY++;
        }
        Console.WriteLine();
    }
}
