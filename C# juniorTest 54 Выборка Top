using System;
using System.Collections.Generic;
using System.Linq;

namespace LinQ
{
    class Program
    {
        static void Main(string[] args)
        {
            List<Player> players = new List<Player>();
            int numberPlayers = 10;
            int numberTop = 3;

            for (int i = 0; i < numberPlayers; i++)
            {
                players.Add(new Player());
                players[i].Draw();
            }

            var topLevelList = players.OrderByDescending(persoon => persoon.Level).Take(numberTop).ToList();
            var topForceList = players.OrderByDescending(persoon => persoon.Force).Take(numberTop).ToList();
            DrawResults(numberTop, topLevelList, topForceList);
        }

        static void DrawResults(int numberTop, List<Player> topLevelList, List<Player> topForceList)
        {
            DrawResult(topLevelList, $"Топ {numberTop} по уровню: ");
            DrawResult(topForceList, $"Топ {numberTop} по силе: ");
        }

        static void DrawResult(List<Player> lists, string text)
        {
            Console.WriteLine("\n\n" + text);

            foreach (Player player in lists)
                player.Draw();
        }
    }

    class Player
    {
        private readonly static Random _random = new Random();
        public string Name { get; private set; }
        public int Level { get; private set; }
        public int Force { get; private set; }

        public Player()
        {
            int maximumLevel = 50;
            int maximumForce = 50;

            Name = "Герой";
            Level = _random.Next(0, maximumLevel);
            Force = _random.Next(0, maximumForce);
        }

        public void Draw() => Console.WriteLine($"{Name}, уровень: {Level}, сила: {Force}.");
    }
}
