using System;


namespace TestOOP
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Renderer renderer = new Renderer();
            Plauer buks = new Plauer(3, 3, '$');

            renderer.DrawPlauer(buks.PositionX, buks.PositionY, buks.GetIcon());
        }
    }

    class Renderer
    {
        public void DrawPlauer(int positionX, int positionY, char icon)
        {
            Console.SetCursorPosition(positionX, positionY);
            Console.WriteLine(icon + "\n");
        }
    }

    class Plauer
    {
        private char _icon;
        
        public int PositionX { get; private set; }
        public int PositionY { get; private set; }

        public Plauer(int dataX, int dataY, char icon)
        {
            PositionX = dataX;
            PositionY = dataY;
            _icon = icon;
        }

        public char GetIcon()
        {
            return _icon;
        }
    }
}

