using System;

namespace testOOP
{
    class Program
    {
        static void Main(string[] args)
        {
            Plauer student = new Plauer(2, 1, 1000, 400);

            Console.WriteLine(" Ты в начале пути ООП, неюный падаван, твои статы:");
            student.ShowStats();
        }
    }

    class Plauer
    {
        private int _health;
        private int _speed;
        private int _mana;
        private int _spirit;

        public Plauer(int health, int speed, int mana, int spirit)
        {
            _health = health;
            _speed = speed;
            _mana = mana;
            _spirit = spirit;
        }

        public void ShowStats()
        {
            Console.WriteLine($" Жизни - {_health}\n Скорость - {_speed}\n Мана - {_mana}\n Дух - {_spirit}");
        }
    }
}
